<div class="form-group">
  <label for="comment">Log:</label>
  <textarea class="form-control" rows="10" id="comment" disabled>
   
     <% @logs.each do |i| %>
     <%= i.a_log %>
     <% end %>
  </textarea>
</div>


</div>

